.cards{
  padding:16px;
}
.card{
  background: #fff;
  margin-bottom: 16px;
  transition:0.5s all;
}
/* 注意hover选择器的写法：同时包含card和hover的组件 */
.card.hover{
  box-shadow: 0 32px 48px rgba(0,0,0,0.06);
}
.card image , .card video{
  height: 36vh;
}
.card .content{
  padding:48rpx 48rpx 64rpx;
}
.card .header{
  font-size:48rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 48rpx;
}

/* 小边线，大标题的after伪元素的样式 */
.card .header::after{
  content: '';
  display: block;
  width:40px;
  border-bottom:2px solid #000;
  padding-bottom: 8px;
}
.card .sub-header{
  font-size: 32rpx;
  letter-spacing: 3px;
  text-transform: uppercase;
}
.card .description, .card .meta{
  margin-bottom: 8px;
  color:rgba(0,0,0,0.85);
  font-size:32rpx;
}